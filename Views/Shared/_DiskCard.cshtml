@model CDWebShop.Models.Disk
@{ 
    string url = $"/Content/Img/{Model.ImageURL}";
}
<div class="card" @*style="width: 100%;"*@>
    <img src=@url class="card-img-top img-fluid" alt="Image of @Model.Title">
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text">Disk category: @Model.Category.Name</p>
        <p class="card-text">Disk type: @Model.DiskType.Name</p>
    </div>
</div>
